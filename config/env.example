# ============================================================================
# VARIABLES DE ENTORNO PARA CAGPU
# ============================================================================
# IMPORTANTE: Nunca committear archivos .env con valores reales
# Copiar este archivo como .env.local y configurar los valores reales
# ============================================================================

# ============================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/cagpu_db"

# ============================================================================
# CONFIGURACIÓN DE JWT
# ============================================================================
# IMPORTANTE: Generar una clave secreta de al menos 32 caracteres
# Ejemplo: openssl rand -base64 32
JWT_SECRET="tu_clave_secreta_muy_larga_y_compleja_aqui_minimo_32_caracteres"
JWT_EXPIRES_IN="1d"

# ============================================================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# ============================================================================
AUTH_SALT_ROUNDS="14"
AUTH_MIN_PASSWORD_LENGTH="12"

# ============================================================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ============================================================================
APP_NAME="CAGPU"
APP_VERSION="0.1.0"
NODE_ENV="development"

# ============================================================================
# CONFIGURACIÓN DE NEXT.AUTH (si se usa)
# ============================================================================
NEXTAUTH_SECRET="otra_clave_secreta_muy_larga_y_compleja_aqui"
NEXTAUTH_URL="http://localhost:3000"

# ============================================================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ============================================================================
# Descomentar y configurar para producción
# NODE_ENV="development"
# NEXTAUTH_URL="http://localhost:3000"

# Configuración para red local
